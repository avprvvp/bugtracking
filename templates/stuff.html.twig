{% extends 'base.html.twig' %}
 {% block title %}My Tasks{% endblock %}

{% block body %}
<p class="my-4"><h1 align="center" class="text-dark" >My tasks</h1></p>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr align="center">
      <th scope="col">Ticket name</th>
      <th scope="col">Type</th>
      <th scope="col">Status</th>
      <th scope="col">Creator</th>
      <th scope="col">Tags</th>
      <th scope="col">Number of comment</th>
    </tr>
  </thead>
  <tbody>
  {% for ticket in tickets %}
      <tr align="center">
      
        <th class="align-middle"><b><a class="text-secondary" href="{{ path('ticket_show', {'id': ticket[0].id, 'project_id': ticket[0].project.id}) }}">{{ ticket[0].name }}</b></a></th>
        <td class="align-middle">{{ ticket[0].type }}</td>
        <td class="align-middle">{{ ticket[0].status }}</td>
        <td class="align-middle">{{ ticket[0].creator.name }}</td>
        <td class="align-middle">
        {% for tag in ticket[0].tags %}
                {{ tag.name }}&ensp;  
        {% endfor %}
      </td>
        <td class="align-middle">{{ ticket[1] }}</td>
        
      </tr>
      {% endfor %}
  </tbody>
</table>


{% endblock %}
