{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="my-5">
<div align="center" class="mx-auto" style="width: 350px;">
<h2>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal"></h1>
    <label for="inputName">Name</label>
    <input type="text" value="{{ last_username }}" name="name" id="inputName" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="checkbox mb-3">
    <h5>
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </h5>
    </div>
   
    <button class="btn btn-outline-secondary btn-lg" type="submit">
        Sign in
    </button>
</form>
</h2>
</div>
</div>
{% endblock %}
